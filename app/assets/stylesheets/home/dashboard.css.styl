@import '../mixins/dashboard'

.track-wrapper
  width 300px
  position relative

.track-inner
  position absolute
  border 1px solid #CBCBCB
  for dir in top left bottom right
    {dir} 10px
  header, footer
    position absolute
    height 30px
  header
    for dir in top left right
      {dir} 0
    h3
      font-size 1em
      padding 0
      margin 0
      text-align center
      line-height 30px
  footer
    for dir in bottom left right
      {dir} 0
    a
      border 2px solid white
      line-height 20px
      border-radius 10px
      padding 0 20px
      color white
      background gray
      text-transform uppercase
      font-size 1em
  .body
    position absolute
    background white
    for dir in left right
      {dir} 0
    for dir in top bottom
      {dir} 30px
