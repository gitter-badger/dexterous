html, body
  height 100%
  width 100%
  margin 0
  padding 0
  overflow-x hidden

#login-links
  top 20px
  right 20px
  position absolute
  z-index 1000
  a
    color: #FFDF0D
    font-weight: 400
    font-size: 1.3em
    text-decoration: none
    padding: 5px 10px

@keyframes pushdown
    0%
      margin-bottom 20px
      opacity 0
    100%
      margin-bottom 10px
      opacity 0.6
#push-down-thumb
  text-align center
  position absolute
  bottom 0
  left 0
  right 0
  color #FFDF0D
  .icon
    height 20px
    width 20px
    margin 10px auto
    display block
    background url('/assets/down_circle.png') no-repeat center center
    -webkit-animation pushdown 3s infinite
#banner
  background #333
  height 100%
  position relative
  border-top 4px solid #FFDF0D 
  background -moz-radial-gradient(center, ellipse cover, #333 0%, #000 100%)
  background -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#333), color-stop(100%,#000))
  background -webkit-radial-gradient(center, ellipse cover, #333 0%,#000 100%)
  background -o-radial-gradient(center, ellipse cover, #333 0%,#000 100%)
  background -ms-radial-gradient(center, ellipse cover, #333 0%,#000 100%)
  background radial-gradient(center, ellipse cover, #333 0%,#000 100%)
  border-bottom 3px solid #C8C8C8

  .inner-1
    background url('/assets/stripes.png')
    height 100%

    .inner-2
      background url('/assets/noise.png')
      height 100%

      .inner-3
        //padding 180px 0 0 0
        position absolute
        left 0
        top 33%
        width 80%
        margin 0 auto
        position relative
        h1
          font-size 4.5em
          margin 0
          color white
          font-weight 400
          padding-bottom 20px
        h2
          font-size 2.1em
          color #E6E6E6
          font-weight 200
  .popup-form
    .arrow
      position absolute
      height 0
      width 0
      border 10px solid transparent
      border-bottom 10px solid #FFDF0D
    position absolute
    z-index 30
    top 60px
    right 20px
    padding 10px
    background #D9D9D9
    border-top 1px solid #FFDF0D
    border-bottom 1px solid #FFDF0D
    display none
#recaptcha_area
  margin 10px auto
#login-popup
  .arrow
    top -20px
    left 85px
#register-popup
  .arrow
    top -20px
    right 40px
  .page
    display none
  .page-1
    display block
#nav-main
  float right
  padding-top 1em
  list-style-type none
  li
    float right
    border-radius 1em
    margin 0 0.5em
    background: #7cb4df;
    border-color: #5d91b8;
    box-shadow: inset #a8d3dd 0 1px 0;
    a
      text-decoration none
      line-height 1.6em
      font-size 1em
      display inline-block
      padding 0 1em
      border-left 2px solid #A8D3DD
      color white
    a:first-child
      border-left none

#descr-promo
  padding 20px
  width 80%
  margin-left auto
  margin-right auto
  .row
    font-size 1.5em
    padding 10px 0
