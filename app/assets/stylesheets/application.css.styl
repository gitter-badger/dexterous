blue-prime = #0090FF
blue-bright = #328EFE
blue-decent = #53B3D9
blue-dark = #0D6289

body
  font-family sans-serif
  font-size 100%
  background white
html, body
  height 100%
  width 100%
#descr-mini
  background: #DFDFDF
  border-bottom: 2px solid #C8C8C8
  background-image: linear-gradient(to bottom, white 0%, #EEE 100%)

  h2
    font-size 1.1em
    padding 0.5em 2em 0.5em 2em
    color blue-dark
    font-weight 200
    text-align right

#banner
  background blue-decent
  padding 5em 2em 0 2em
  box-shadow inset 0 0 2px 3px rgba(0,0,0,0.3)
  overflow hidden
  h1
    font-size 6.5em
    margin 0
    color white
    position relative
    bottom -0.2em
    text-shadow 0 0 8px rgba(0,0,0,0.6)
    font-weight 400
    text-align right

#nav-main
  float right
  padding-top 1em
  li
    float right
    border 2px solid blue-prime
    border-radius 1em
    margin 0 0.5em
    background: #7cb4df;
    border-color: #5d91b8;
    box-shadow: inset #a8d3dd 0 1px 0;
    a
      text-decoration none
      line-height 1.6em
      font-size 1em
      display inline-block
      padding 0 1em
      border-left 2px solid #A8D3DD
      color white
    a:first-child
      border-left none
