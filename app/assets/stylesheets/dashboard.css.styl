//= require ./pure_customizations

@import './mixins/colors'

hdr-h = 40px
ftr-h = 30px

a
  text-decoration none
  cursor pointer

#dashboard
  overflow hidden
  font-family: 'Raleway', sans-serif
  background #D9D9D9

  header
    height hdr-h
    background #E6E6E6
    border-bottom 2px solid #C8C8C8
    overflow hidden
    h1
      color col-red-prime
      line-height hdr-h
      padding-left 20px
      font-weight bold
      margin 0
      font-size 1em
    #search-form
      float left
      font-size 0.7em
      height (hdr-h - 20px)
      line-height (hdr-h - 20px)
      margin 10px
      overflow hidden
      border 1px solid #C8C8C8
      border-radius ((hdr-h - 20px)/2)
      padding 0 ((hdr-h - 20px)/2)
    .prime
      background #C8C8C8
      border-top 2px solid #545454
      color #333
      display inline-block
      font-size 0.8em
      height hdr-h
      line-height hdr-h
      padding 0 10px
      margin-right 20px
  .body
    overflow auto
  footer
    height ftr-h
    line-height ftr-h
    font-size 0.8em
    text-align center
    background #C8C8C8

  #new-track-form
    position absolute
    top hdr-h
    right 10px
    background white
    border 1px solid #C8C8C8
    border bottom 2px solid #C8C8C8
    padding 10px

#track-creation-wizard
  width  80%
  margin 100px auto
  background white
  border-top col-orange-prime 4px solid
  .wizard-title
    h1
      text-align center
      line-height 2.5em
      margin 0
      padding 0
      color col-red-prime
  .wizard-body
    padding 10px
    text-align center
    label
      font-size 2em
      display block
      margin-top 30px
    .select-wrapper
      margin 10px auto
    input[type='text'], input[type='password'], textarea
      margin 20px 0
      border 1px dashed #C8C8C8
      width 80%
      box-shadow none
      background transparent
      font-size 1.5em
      line-height 1.5em
      text-align center
      outline 0
      border-bottom 1px solid #C8C8C8
      &:focus
        border-bottom 1px solid col-red-prime
  .wizard-footer
    padding-bottom 10px
    text-align center
    .pure-button-secondary
      margin-right 10px

.select-wrapper
  padding: 0;
  margin: 0;
  border: 1px solid #ccc;
  width: 120px;
  border-radius: 3px;
  overflow: hidden;
  background-color: #fff;
  background: #fff url("/assets/arrowdown.gif") no-repeat 90% 50%;
  select
    padding: 5px 8px;
    width: 130%;
    border: none;
    box-shadow: none;
    background-color: transparent;
    background-image: none;
    appearance: none;
  select:focus
    outline: none;

.track-wrapper
  width 300px
  float left
  position relative
  .track-inner
    position absolute
    background #FAF9F7
    top 10px
    left 10px
    right 10px
    bottom 10px
    & > header, & > footer
      left 0
      right 0
      position absolute
      height 30px
    & > header
      top 0
    & > footer
      bottom 0
    & > .body
      position absolute
      left 0
      right 0
      top 30px
      bottom 30px

#timeline
  min-height 300px
  width 90%
  margin 0 auto
  position relative
  background #FAFAFA
#spine
  width 0
  border-right 3px solid #E3E3E3
  position absolute
  left 100px
  top 0
  bottom 0
#milestones
  margin-top 20px
  padding-top 10px
  ul
    list-style-type none
    margin 0
    padding 0
    li
      margin 0 200px 10px (100px+30px)
      border 1px solid #E6E6E6
      border-left #A8A8A8 4px solid
      padding 10px
      position relative
      background #FFFFFF
      .thumb
        background url('/assets/milestone_circle.png') center center no-repeat
        width 21px
        height 21px
        position absolute
        top 10px
        left -43px
      .pointer
        height 0
        width 0
        border 6px solid transparent
        border-right 6px solid #A8A8A8
        position absolute
        top 15px
        left -16px
      h1
        padding 0
        margin 0
        border-bottom 1px solid #E6E6E6