- content_for :head do
  = stylesheet_link_tag 'tracks/show', media: "all"
  = javascript_include_tag 'application'

%h1#track-wrapper
  %span#track-title-label Track:
  %span#track-title= track.title

.d-tab-set-container
  .d-tabs.d-tabs--centered
    %span
      %a.active Milestones
      %a Participants
      %a Settings
  .d-tabs-footer
  .d-tab-body.sjs-track-participants--index--outlet
    #timeline
      #spine
      #milestones.sjs--milestones--index--outlet
        = render 'milestone_list'
        = render 'new_milestone_entry'
